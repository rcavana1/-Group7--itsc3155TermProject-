<h1>Edit Budget</h1>
<%= form_for :budget, url: budget_path(@budget), method: :patch do |f| %>
 
  <% if @budget.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@budget.errors.count, "error") %> prohibited
        this budget from being saved:
      </h2>
      <ul>
        <% @budget.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :target %><br>
    <%= f.number_field :target, :step=> 0.01 %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to my budgets', user_budgets_path(@user) %>
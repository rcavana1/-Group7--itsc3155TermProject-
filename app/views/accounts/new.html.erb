<h1>New Account</h1>
<%= form_for :account, url: accounts_path do |f| %>
    <% if @account.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@account.errors.count, "error") %> prevented this
                account from being created:
            </h2>
            <ul>
                <% @account.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <p>
        <%= f.label :username %><br>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :password %><br>
        <%= f.text_field :password %>
    </p>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>